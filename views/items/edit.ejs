<%- include("../partials/header") %>

<div class="container">
  <h2 style="text-align: center;">Edit <%=item.name%></h2>
  <div class="row">
    <div style="width: 30%; margin: 25px auto;">
      <form action="/items/<%=item._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="item[name]"
            class="form-control"
            value="<%=item.name%>"
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            name="item[price]"
            class="form-control"
            placeholder="price"
            value="<%=item.price%>"
            min="0.01"
            step="10"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="item[image]"
            class="form-control"
            value="<%=item.image%>"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="item[description]"
            class="form-control"
            value="<%=item.description%>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">
            Submit
          </button>
        </div>
      </form>
      <a href="/items"> Go Back</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
