<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to MyBuy</h1>
      <p>View the most worthwhile items to buy online. Add your own testimonials on items you liked</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/items/new">Add new item</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="margin-bottom: 50px;">
    <%items.forEach(function(item){ %>
    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img
          class="img-thumbnail"
          style="border: none;"
          src="<%= item.image%>"
          alt=""
        />
        <div class="caption">
          <h4><%= item.name%></h4>
        </div>
        <p><a href="/items/<%=item._id%>" class="btn btn-primary">More Info</a></p>
      </div>
    </div>
    <%});%>
  </div>

</div>

<%- include("../partials/footer") %>

<style>
  .card-img-top,
  .img-thumbnail {
    width: 100%;
    height: 15vw;
    object-fit: cover;
  }
</style>
