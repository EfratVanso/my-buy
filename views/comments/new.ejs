<%- include("../partials/header") %>

<div class="container">
  <h2 style="text-align: center;">Add New Comment To <%= item.name %></h2>
  <div class="row">
    <div style="width: 40%; margin: 25px auto;">
      <form action="/items/<%= item._id%>/comments" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="">Comment</label>
          <input
            type="text"
            name="comment[text]"
            class="form-control"
            placeholder="your comment..."
          />
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="file" id="image" name="image" accept="image/*" >
      </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">
            Post Comment
          </button>
        </div>
      </form>
      <a href="/items/<%= item._id %>"> Go Back</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>